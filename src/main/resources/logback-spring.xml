<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console appender for development -->
    <springProfile name="!prod">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{correlationId:-}] %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>
    
    <!-- JSON console appender for production -->
    <springProfile name="prod">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp>
                        <timeZone>UTC</timeZone>
                        <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</pattern>
                    </timestamp>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <stackTrace/>
                    <pattern>
                        <pattern>
                            {
                                "application": "ai-fundamentals",
                                "correlationId": "%X{correlationId:-}",
                                "thread": "%thread"
                            }
                        </pattern>
                    </pattern>
                </providers>
            </encoder>
        </appender>
    </springProfile>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    
    <!-- Application specific loggers -->
    <logger name="com.srihari.ai" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <!-- Spring AI logger -->
    <logger name="org.springframework.ai" level="WARN" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <!-- Reactor Netty logger -->
    <logger name="reactor.netty" level="WARN" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <!-- Spring profile specific logging levels -->
    <springProfile name="dev">
        <logger name="com.srihari.ai" level="DEBUG" additivity="false">
            <appender-ref ref="STDOUT"/>
        </logger>
        <logger name="org.springframework.ai" level="INFO" additivity="false">
            <appender-ref ref="STDOUT"/>
        </logger>
    </springProfile>
</configuration>